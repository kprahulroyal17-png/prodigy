import time

def stopwatch():
    print("Simple Python Stopwatch")
    print("Press ENTER to start, CTRL+C to stop")
    input()
    start_time = time.time()
    try:
        while True:
            elapsed = round(time.time() - start_time, 0)
            mins, secs = divmod(int(elapsed), 60)
            hrs, mins = divmod(mins, 60)
            print(f"\r{hrs:02}:{mins:02}:{secs:02}", end="")
            time.sleep(1)
    except KeyboardInterrupt:
        print("\nStopped!")

stopwatch()
